<?xml version="1.0" encoding="utf-8"?>

<com.lz.example.android_scrollnestedlist.HideHeaderNestedParent xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="header_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_view"
        android:background="@android:color/white">

    </android.support.v7.widget.RecyclerView>
</com.lz.example.android_scrollnestedlist.HideHeaderNestedParent>